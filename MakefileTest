CC=g++

NAME=mypam.so
CFLAGS=-I include -std=c++11 -Wall -Wextra

LDFLAGS=-lcryptsetup

SRC=	src/pam.c	\
	src/crypt.c


TEST=	$(SRC)		\
	src/test.c

OBJ=$(TEST:.c=.o)

all:	$(NAME)

$(NAME):$(OBJ)
	g++ -o $(NAME) $(OBJ) -lpam -lpam_misc 

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re:	fclean all

dep:
	apt install uuid-dev libdevmapper-dev libpopt-dev libgcrypt20 libgcrypt20-dev libcryptsetup-dev
